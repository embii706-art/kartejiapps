rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return request.auth.uid == uid;
    }

    function hasRole(role) {
      return role in get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.roles
          || role in get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.extraRoles;
    }

    function isApproved() {
      return get(/databases/$(database)/documents/profiles/$(request.auth.uid)).data.approvalStatus == "approved";
    }

    match /profiles/{uid} {
      allow read: if isSignedIn() && isOwner(uid);
      allow create: if isSignedIn() && isOwner(uid);
      allow update, delete: if false;
    }

    match /activities/{id} {
      allow read: if isSignedIn() && isApproved();
      allow create: if isSignedIn() && isApproved() 
        && (hasRole("super_admin") || hasRole("ketua") || hasRole("wakil_ketua") || hasRole("sekretaris"));
      allow update, delete: if isSignedIn() && isApproved()
        && (hasRole("super_admin") || hasRole("ketua") || hasRole("wakil_ketua") || hasRole("sekretaris"));
    }

    match /activities/{id}/attendance/{uid} {
      allow read: if isSignedIn() && isApproved();
      allow update: if isSignedIn() && isApproved()
        && (hasRole("super_admin") || hasRole("ketua") || hasRole("wakil_ketua") || hasRole("sekretaris"));
    }

    match /feed/{id} {
      allow read: if isSignedIn() && isApproved();
      allow create, update, delete: if isSignedIn() && isApproved()
        && (hasRole("super_admin") || hasRole("ketua") || hasRole("wakil_ketua") || hasRole("sekretaris"));
    }

    match /finance/{id} {
      allow read: if isSignedIn() && isApproved();
      allow create, update, delete: if isSignedIn() && isApproved()
        && (hasRole("super_admin") || hasRole("ketua") || hasRole("bendahara"));
    }

    match /calendar_events/{id} {
      allow read: if isSignedIn() && isApproved();
      allow create, update, delete: if isSignedIn() && isApproved()
        && (hasRole("super_admin") || hasRole("ketua") || hasRole("sekretaris"));
    }

    match /members/{uid} {
      allow read: if isSignedIn() && isApproved();
      allow create, update, delete: if isSignedIn() && isApproved()
        && (hasRole("super_admin") || hasRole("ketua") || hasRole("sekretaris"));
    }

    match /minutes/{id} {
      allow read: if isSignedIn() && isApproved();
      allow create, update, delete: if isSignedIn() && isApproved()
        && (hasRole("super_admin") || hasRole("ketua") || hasRole("sekretaris"));
    }

    match /documents/{id} {
      allow read: if isSignedIn() && isApproved();
      allow create, update, delete: if isSignedIn() && isApproved()
        && (hasRole("super_admin") || hasRole("ketua") || hasRole("sekretaris"));
    }

    match /periods/{id} {
      allow read: if isSignedIn() && isApproved();
      allow create, update, delete: if isSignedIn() && isApproved()
        && hasRole("super_admin");
    }

    match /rate_limits/{key} {
      allow read, write: if false;
    }
  }
}
